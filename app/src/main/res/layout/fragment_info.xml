<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#8dc6a4"
    android:orientation="vertical">

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textColor="#ff2600"
        android:textSize="26sp"
        android:id="@+id/textviewtensinhvien"
        android:text="Ten sinh vien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textColor="#2134c6"
        android:textSize="26sp"
        android:id="@+id/textviewnamsinh"
        android:text="Nam sinh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textColor="#a4267a"
        android:textSize="26sp"
        android:id="@+id/textviewdiachi"
        android:text="Dia chi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:textColor="#0aa4a9"
        android:textSize="26sp"
        android:id="@+id/textviewemail"
        android:text="Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>